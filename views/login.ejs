

<%- include('header'); -%>
<h1 class="form-heading">Welcome <span style="color: #42435F">To-Do</span>  App <br><hr> <small style="font-size: 23px"><%= listTitle %></small></h1>
<div class="login-form">
    <div class="main-div">
        <div class="panel">
            <h2>Admin Login</h2>
            <p>Please enter your name, email and password</p>
        </div>
        <form action="/login" method="POST" id="Login">
            <div class="form-group">
                <input type="text" class="form-control" name="inputName" id="inputName" value="" placeholder="Name">
            </div>
            <div class="form-group">
                <input type="email" class="form-control" name="inputEmail" id="inputEmail" placeholder="Email Address">
            </div>

            <div class="form-group">
                <input type="password" class="form-control" name="inputPassword" id="inputPassword" placeholder="Password">
            </div>
            <div class="forgot">
                <a href="#">Forgot password?</a>
                <% if (isTrue === false){ %>
                    <hr>
                    <h6> <span style="color: red">Login Failed.<span> Please try again!</h2>
                <% } %>
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
    </div>
</div>
<%- include('footer'); -%>