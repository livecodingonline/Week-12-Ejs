
<%- include('header'); -%>
<div class="container">   
         
        
        <img class='image' src=<%= imgSrc %> alt="">   
         
        <div class="box" id="heading">
             <h1> <%= name.toUpperCase()%>'s To Do List</h1>
        </div>

        <div class="box">
             <% for(var i = 0; i< newListItems.length; i++){ %>
           <div class="item">
                <input type="checkbox" >
                <p><%= newListItems[i] %></p>
           </div>
        <% } %>

        <form class="" action="/todo" method="POST">
            <input type="text" name="newItem" autocomplete="off" placeholder="New Item" id="text">
            <button type="submit" name="list">+</button>
        </form>


        </div>
       
    </div>
<%- include('footer'); -%>